    MDTextField:
        id: date_input
        hint_text: "Date de d√©but"
        on_text: app.nom_input = self.text


<Content_point_interet>
    orientation: "vertical"
    spacing: "0dp"
    size_hint_y: None
    height: "300dp"

    MDTextField:
        id: nom_input
        hint_text: "Nom"

    MDTextField:
        id: type_input
        hint_text: "Type"
    
    MDTextField:
