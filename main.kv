#:kivy 2.1.0
#:import utils kivy.utils
BoxLayout:
    orientation: 'vertical'
    MDToolbar:
        id : toolbar
        title: "Carnet de voyages"
        right_action_items: [['text-search', lambda x: app.search_menu.open()]]
        md_bg_color:  .7, .8, .8, 1

    MDBottomNavigation:
        id: panel
        selected_color_background: 0, 0, 1, .4
        text_color_active: 0, 0, 0, 1
        panel_color: .7, .8, .8, 1
        MDBottomNavigationItem:
            # this is a home screen 
            id: home_nav
            name: "Home"
            text: "Home"
            icon: "home"
            Image:
                source: '/Users/wissemcherifi/Desktop/App_voyage_python/travel.png'
                allow_stretch: False
                keep_ratio: False
            MDFloatLayout:
                MDRoundFlatButton:
                    pos_hint:{"x":0.55, "y":0.08}
                    size_hint: (None,None)
                    font_size : 23
                    text:"Nouveau point d'interet"
                    on_press: app.show_confirmation_dialog_pt_interet()
            MDFloatLayout:
                MDRoundFlatButton:
                    pos_hint:{"x":0.10, "y":0.08}
                    size_hint: (None,None)
                    font_size : 23
                    text:'Commencer un voyage'
                    on_press: app.show_confirmation_dialog_voyage()
       
        MDBottomNavigationItem:
            # this is a map screen
            id: map_nav 
            text: "Map"
            name: "Map"
            icon: "google-maps"
            MapView:
                lat: 48
                lon: 2
                zoom: 5
        MDBottomNavigationItem:
            id: search_nav
            # this is a search screen 
            text: "Navigation"
            name: "Navigation"
            icon: "account-search"
   

